REDIS_HOST={{ redis_host }}


# ───────── Ragflow ─────────────────────────────────────────────────
SVR_HTTP_PORT={{ svr_http_port }}


HF_ENDPOINT={{ hf_endpoint }}
MACOS={{ macos | lower }}

